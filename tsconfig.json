{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["dom"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2016",
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.ts", "./src/**/*.spec.tsx", "node_modules"]
}